<Window x:Class="ReinCorpDesign.ScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"  
        Title="ScreenWindow"
        WindowStyle="None"
        ShowInTaskbar="false"
        ResizeMode="NoResize"
        
        >
    <Grid x:Name="ScreenBackGrid" Background="#FF222222">
        <WindowsFormsHost >
            <wf:PictureBox x:Name="_ScreenBox" SizeMode="AutoSize"/>
        </WindowsFormsHost>
    </Grid>
</Window>
